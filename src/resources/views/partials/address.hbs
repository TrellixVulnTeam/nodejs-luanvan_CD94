<div class="form_top">
    <h3 class="delivery_title mb-2">Giao hàng tới</h3>
    <div class="form-group">
        <label for="inputFullname"><span>Họ và tên <i class="text-danger">*</i></span></label>
        <input type="text" name="name" id="inputFullname" class="form-control" placeholder="Họ và tên" value="">
    </div>
    <div class="form-group">
        <label for="inputPhone"><span>Điện thoại <i class="text-danger">*</i></span></label>
        <input type="text" name="phone" id="inputPhone" maxlength="10" class="form-control" placeholder="Điện thoại"
            value="">
    </div>
    <div class="form-group">
        <label for="inputEmail"><span>Email <i class="text-danger">*</i></span></label>
        <input type="text" name="email" id="inputEmail" class="form-control" placeholder="Email" value="">
    </div>
    <div class="form-group">
        <label for="inputCity"><span>Tỉnh/Thành Phố <i class="text-danger">*</i></span></label>
        <input type="text" name="City" id="inputCity" class="form-control" placeholder="Tỉnh/Thành Phố" value="">
    </div>
    <div class="form-group">
        <label for="inputDistrict"><span>Phường/Xã <i class="text-danger">*</i></span></label>
        <input type="text" name="District" id="inputDistrict" class="form-control" placeholder="Phường/Xã" value="">
    </div>
    <div class="form-group">
        <label for="inputAddress"><span>Địa chỉ (Số nhà - Tên đường) <i class="text-danger">*</i></span></label>
        <input type="text" name="address" id="inputAddress" class="form-control"
            placeholder="Địa chỉ (Số nhà - Tên đường)">
    </div>
    <div class="form-group">
        <center>
            <button style=" width: 100%;" type="submit" class="btn btn-danger btn-lg">TIẾP TỤC</button>
        </center>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        
        var foodId;
        var deleteForm = document.forms['delete-food-form'];
        var btnDeleteFood = document.getElementById('btn-delete-food');
        //var reason = document.getElementById('reason-in-form');

        $('#delete-food-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            foodId = button.data('id');
        });

        btnDeleteFood.onclick = function () {
            var message = $('textarea#reason-cancel').val();
            var reason = $('input#reason').val(message);
            deleteForm.action = '/staff/cancel/' + foodId + '?_method=DELETE';
            deleteForm.submit();
        }
    })
</script>