<div class="container">
    <h1>CẬP NHẬT MÓN ĂN</h1>
    <form class="mt-4" method="POST" action="/food/{{food._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên món ăn: </label>
            <input type="text" class="form-control" value="{{food.name}}" id="name" name="name" />
        </div>
        <div class="form-group">
            <label for="description">Mô tả: </label>
            <textarea class="form-control" id="description" name="description">{{food.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="image">Hình ảnh: </label>
            <input type="text" class="form-control" value="{{food.image}}" id="image" name="image" />
        </div>
        <div class="form-group">
            <label for="price">Giá: </label>
            <input type="text" class="form-control" value="{{food.price}}" id="price" name="price" />
        </div>

        <button type="submit" class="btn btn-primary">Sửa</button>
    </form>
</div>